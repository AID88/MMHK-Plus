	<path id="src.html.files">
		<fileset dir="${mmhkplus.project.dir}/src" includes="*.html"/>
	</path>
	
	<path id="src.jactari.files">
		<fileset dir="${mmhkplus.project.dir}/src" includes="**/*" excludes="**/include/**/*"/>
	</path>
	
</project>